@prefix sh:        <http://www.w3.org/ns/shacl#> .
@prefix proof:     <https://uor.foundation/proof/> .
@prefix rdfs:      <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd:       <http://www.w3.org/2001/XMLSchema#> .

# §2.3 — proof:CriticalIdentityProof must have proof:verified = true

proof:CriticalIdentityProofShape
  a sh:NodeShape ;
  sh:targetClass proof:CriticalIdentityProof ;
  rdfs:comment "proof:CriticalIdentityProof must have proof:verified = true (§2.3). The critical identity neg(bnot(x)) = succ(x) must hold." ;
  sh:property [
    sh:path proof:verified ;
    sh:datatype xsd:boolean ;
    sh:hasValue true ;
    sh:minCount 1 ;
    sh:maxCount 1 ;
    sh:message "proof:CriticalIdentityProof must have proof:verified = true (§2.3)." ;
  ] ;
  sh:severity sh:Violation .
